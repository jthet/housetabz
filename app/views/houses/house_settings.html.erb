<!-- House Information Button -->
<style>
  .nav-link.active {
    color: green; /* Change the color to green or your desired highlight color */
  }
</style>


<div class="bottom-4 right-4">
  <a href="#" id="open-house-info" class="nav-link">House Information</a>
</div>

<!-- Add Services Button -->
<div class="bottom-4 right-4">
  <a href="#" id="open-services" class="nav-link">Add Services</a>
</div>

<!-- House Information Modal -->
<div id="house-info-modal" class="hidden inset-0 flex items-center justify-center z-50">
  <div class="modal-container bg-white w-1/2 p-8 shadow-md rounded">
    <!-- Render the house information content here -->
    <%= render 'houses/house_information' %>
    <!-- House Information Content Ends Here -->

    <!-- Close Button -->
    <button id="close-house-info-modal" class="mt-4 px-4 py-2 bg-blue-500 text-white font-bold rounded hover:bg-blue-700">Close</button>
  </div>
</div>

<!-- Add Services Modal -->
<div id="services-modal" class="hidden inset-0 flex items-center justify-center z-50">
  <div class="modal-container bg-white w-1/2 p-8 shadow-md rounded">
    <!-- Render the add services content here -->
    <%= render 'houses/add_services' %>
    <!-- Add Services Content Ends Here -->

    <!-- Close Button -->
    <button id="close-services-modal" class="mt-4 px-4 py-2 bg-blue-500 text-white font-bold rounded hover:bg-blue-700">Close</button>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const openHouseInfoButton = document.getElementById('open-house-info');
    const openServicesButton = document.getElementById('open-services');
    const closeHouseInfoModalButton = document.getElementById('close-house-info-modal');
    const closeServicesModalButton = document.getElementById('close-services-modal');
    const houseInfoModal = document.getElementById('house-info-modal');
    const servicesModal = document.getElementById('services-modal');

    openHouseInfoButton.addEventListener('click', function() {
      houseInfoModal.classList.remove('hidden');
      servicesModal.classList.add('hidden'); // Close services modal
    });

    openServicesButton.addEventListener('click', function() {
      servicesModal.classList.remove('hidden');
      houseInfoModal.classList.add('hidden'); // Close house info modal
    });
  
    closeHouseInfoModalButton.addEventListener('click', function() {
      houseInfoModal.classList.add('hidden');
    });

    closeServicesModalButton.addEventListener('click', function() {
      servicesModal.classList.add('hidden');
    });
});

document.addEventListener('DOMContentLoaded', function() {
  const navLinks = document.querySelectorAll('.nav-link');
  const closeHouseInfoModalButton = document.getElementById('close-house-info-modal');
  const closeServicesModalButton = document.getElementById('close-services-modal');
  const houseInfoModal = document.getElementById('house-info-modal');
  const servicesModal = document.getElementById('services-modal');

  navLinks.forEach(link => {
    link.addEventListener('click', function() {
      navLinks.forEach(link => link.classList.remove('active'));
      this.classList.add('active');
    });
  });

  closeHouseInfoModalButton.addEventListener('click', function() {
    houseInfoModal.classList.add('hidden');
  });

  closeServicesModalButton.addEventListener('click', function() {
    servicesModal.classList.add('hidden');
  });
});

</script>

